{% extends 'base.html.twig' %}

{% block title %}Page de profil{% endblock %}

{% block body %}

    <div class="container">
    
        <div class="row align-items-center">
        
            <div class="col-3 text-center">
                <img src="{{ user.avatar }}" alt="avatar de {{ user.fullName }}" class="avatar mb-3">
                <br>
                <span class="badge badge-primary">{{ user.ads | length }} {% if user.ads | length >1 %} annonces {% else %} annonce {% endif %}</span>
            </div>
            <div class="col-9">
                <h1>{{ user.fullName }}</h1>  

                {% if user is same as (app.user) %}  
                    <div class="mt-3">
                        <a href="{{ path('account_profile')}}" class="btn btn-secondary">Modifier mes informations</a>
                        <a href="{{ path('account_password')}}" class="btn btn-secondary">Modifier mon mot de passe</a>
                    </div>
                {% endif %}
            
            </div>
        </div>
        <div class="container mt-5">
            {{ user.description |raw }}
            <hr class="py-3">

            <h3>Les annonces de {{ user.fullName }}</h3>

        </div>

        {% if user.ads | length >0 %}
        <div class="row">
        {% for ad in user.ads %}
             {% include 'ad/_ad.html.twig' %}
        {% endfor %}
        </div>
        {% else %}
        <div class="alert alert-warning">
            <p>{{ user.fullName }} n'a pas encore d'annonce sur ce site</p>
        
        </div>
        {% endif %}

    </div>

{% endblock %}
