{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}

<main class="container-fluid mt-5">


     <div class="row">
        <div class="col">
            <div class="card bg-info text-white text-center p-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-user fa-3x"></i>
                        </div>
                        <div class="col-8">
                            <h4 class="card-title"><a class="text-white" href="{{path('admin_users_list')}}">{{stats.users}} utilisateurs</a></h4>
                        </div>
                    </div>
                </div>
    
            </div>
   
        </div>
        <div class="col">
        <div class="card bg-success text-white text-center p-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-hotel fa-3x"></i>
                        </div>
                        <div class="col-8">
                            <h4 class="card-title"><a class="text-white" href="{{path('admin_ads_list')}}">{{stats.ads}} annonces</a></h4>
                        </div>
                    </div>
                </div>
    
            </div>
        </div>
        <div class="col">
            <div class="card bg-warning text-white text-center p-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-folder fa-3x"></i>
                        </div>
                        <div class="col-8">
                            <h4 class="card-title"><a class="text-white" href="{{path('admin_bookings_list')}}">{{stats.bookings}} r√©servations</a></h4>
                        </div>
                    </div>
                </div>
    
            </div>
        </div>
        <div class="col">
        <div class="card bg-success text-white text-center p-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-comment fa-3x"></i>
                        </div>
                        <div class="col-8">
                            <h4 class="card-title"><a class="text-white" href="{{path('admin_comments_list')}}">{{stats.comments}} avis</a></h4>
                        </div>
                    </div>
                </div>
    
            </div>
        </div>     

    </div>
    <div class="row ">
        <div class="col">
            <div class="alert alert-success my-3"> 
                <h4 class="alert-heading "> <i class="fas fa-arrow-up"></i> Annonces les + populaires</h4>
            
 
                <table class="table table-hover">
                    <thead>
                        <th>Annonce</th>
                        <th>Loueur</th>
                        <th>Moyenne</th>
                    
                    </thead>
                    <tbody>
                        {% for ad in bestAds %}
                        <tr>
                            <td>{{ad.title}}</td>
                            <td>
                                <img src="{{ad.avatar}}" alt="" class="avatar avatar-xs">
                                {{ad.firstname}} {{ad.lastname}}
                            </td>
                            <td>
                                <span class="badge badge-dark">
                                    {{ad.note|number_format(1,',','')}}
                                </span>
                            </td>
                          
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
             
        </div>
        <div class="col">
            <div class="alert alert-warning my-3"> 
                <h4 class="alert-heading"> <i class="fas fa-arrow-down"></i> Les pires annonces</h4> 
         
    
                <table class="table table-hover">
                    <thead>
                        <th>Annonce</th>
                        <th>Loueur</th>
                        <th>Moyenne</th>
                    
                    </thead>
                    <tbody>
                       {% for ad in worstAds %}
                        <tr>
                         
                            <td>{{ad.title}}</td>
                            <td>
                                <img src="{{ad.avatar}}" alt="" class="avatar avatar-xs">
                                {{ad.firstname}} {{ad.lastname}}
                            </td>
                            <td>
                                <span class="badge badge-dark">
                                    {{ad.note|number_format(1,',','')}}
                                </span>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
             
        </div>
    </div>
  


</main>
{% endblock %}
